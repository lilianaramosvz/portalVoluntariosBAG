rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // qrCodes: only allow server (Cloud Functions / Admin) to create/update/delete.
    // Allow authenticated users to read tokens if your app requires it.
    match /qrCodes/{docId} {
      allow read: if request.auth != null;
      allow create, update, delete: if false;
    }

    // Default: authenticated reads/writes for other collections (adjust as needed)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
