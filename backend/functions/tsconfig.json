{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["es2021"],
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": [
    "node_modules",
    "../../node_modules",
    "../../frontend",
    "../../app",
    "**/*.spec.ts"
  ],
  "rootDir": "."
}
